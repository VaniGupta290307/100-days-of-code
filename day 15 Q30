#include<stdio.h>
int main()
{
    int num,remainder,reversed=0;
    printf("enter the number");
    scanf("%d",&num);// num=100
    while(num!=0)
    {
        remainder = num%10;
        reversed = reversed *10 + remainder;
        num=num/10;
    }
    printf("Reversed number =%d\n",reversed);
    return 0;
    
    
}
