#include<stdio.h>
int main()
{
    char operation;
    int num1,num2,result;
    printf("enter operation");
    scanf("%c",&operation);
    printf("enter two numbers");
    scanf("%d%d",&num1,&num2);
    switch(operation)
    { 
        case '+':
        {
            result=num1 + num2;
            printf("result is %d",result);
            break;
        }
        case '-':
        {
            result = num1 -num2;
            printf("result is %d",result);
            break;
        }
        case '*':
        {
            result = num1 * num2;
            printf("result is %d",result);
            break;
        }
        case '/':
        {
            result = num1/num2;
            printf("result is %d",result);
            break;
        }
        case '%':
        {
            result = num1%num2;
            printf("result is %d",result);
            break;
        }
    }
    return 0;
}
