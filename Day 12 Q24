#include<stdio.h>
int main()
{
    int bill,unit;
    printf("unit consumed by the user");
    scanf("%d",&unit);
    if(unit<=100)
    {
        bill=5*unit;
        printf("Electricity bill is %d",bill);
    }
    else if(unit> 100 && unit <=200)
    {
        bill=(unit-100)*7+100*5;
        printf("Electricity bill is %d",bill);
    }
    else if(unit >200 && unit <=300)
    {
        bill=(unit-200)*10+100*7+100*5;
        printf("Electricity bill is %d",bill);
    }
    else
    {
        bill=(unit-300)*12+100*10+100*7+100*5;
        printf("Electricity bill is %d",bill);
    }
    return 0;
}
